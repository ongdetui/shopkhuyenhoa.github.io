                                    <option value="Xã Yên Ninh" class="form-control">Xã Yên Ninh</option>
                                  </select>
                                  <select name="xa" id="thieuhoa" class="form-control">
                                    <option value="Thị trấn Vạn Hà" class="form-control">Thị trấn Vạn Hà</option>
