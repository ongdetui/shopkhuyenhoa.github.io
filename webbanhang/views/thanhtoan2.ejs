<body>
    <div class="app">
        <header class="header" style="height: 86px;">
            <!-- header with search -->
        <div class="header-with-search">
          <div class="header__logo hide-on-mobile-tablet">
            <a href="/">
              <img src="/images/logo.PNG" alt="ảnh logo" class="header__logo-img">
            </a>
          </div>
          <div class="status">
              <div class="status-node">
                  <div class="status-text">Đăng nhập</div>
                  <div class="status-bar">
                      <div class="status-fill"></div>
                  </div>
                  <div class="status-circle">1</div>
              </div>
              <div class="status-node">
                  <div class="status-text">Địa chỉ giao hàng</div>
                  <div class="status-bar">
                      <div class="status-fill status-off"></div>
                  </div>
                  <div class="status-circle">2</div>
              </div>
              <div class="status-node">
                <div class="status-text">Thanh toán & Đặt mua</div>
                <div class="status-circle status-off1">3</div>
