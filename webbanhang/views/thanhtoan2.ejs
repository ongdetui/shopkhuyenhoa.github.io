                                    <option value="Xã Định Liên" class="form-control">Xã Định Liên</option>
                                    <option value="Xã Định Tân" class="form-control">Xã Định Tân</option>
                                    <option value="Xã Định Tăng" class="form-control">Xã Định Tăng</option>
                                    <option value="Xã Định Thành" class="form-control">Xã Định Thành</option>
                                    <option value="Xã Định Tiến" class="form-control">Xã Định Tiến</option>
                                    <option value="Xã Định Tường" class="form-control">Xã Định Tường</option>
                                    <option value="Xã Yên Bái" class="form-control">Xã Yên Bái</option>
                                    <option value="Xã Yên Giang" class="form-control">Xã Yên Giang</option>
                                    <option value="Xã Yên Hùng" class="form-control">Xã Yên Hùng</option>
                                    <option value="Xã Yên Lạc" class="form-control">Xã Yên Lạc</option>
                                    <option value="Xã Yên Lâm" class="form-control">Xã Yên Lâm</option>
                                    <option value="Xã Yên Ninh" class="form-control">Xã Yên Ninh</option>
                                    <option value="Xã Yên Phong" class="form-control">Xã Yên Phong</option>
                                    <option value="Xã Yên Phú" class="form-control">Xã Yên Phú</option>
                                    <option value="Xã Yên Tâm" class="form-control">Xã Yên Tâm</option>
                                    <option value="Xã Yên Thái" class="form-control">Xã Yên Thái</option>
                                    <option value="Xã Yên Thịnh" class="form-control">Xã Yên Thịnh</option>
